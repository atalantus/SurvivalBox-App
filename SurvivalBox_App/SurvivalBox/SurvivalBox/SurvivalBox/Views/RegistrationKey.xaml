<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SurvivalBox.Views.RegistrationKey"
             Title="Registration Key">
    <ContentPage.Content>

        <StackLayout Padding="0,10,0,50">
            <Label Text="Welcome" HorizontalOptions="Center" VerticalOptions="Start" Style="{StaticResource H01}"/>

            <StackLayout VerticalOptions="CenterAndExpand" Margin="50,0" WidthRequest="300" HorizontalOptions="Center">
                <Label Text="Please enter your Registration Key:" Style="{StaticResource H03}"/>
                <Entry x:Name="RegKey" Placeholder="0000-TEST-9999-AFFE"/>
            </StackLayout>

            <Button x:Name="ActivateBtn" Text="Activate" Clicked="ActivateBtn_OnClicked" HorizontalOptions="Center" VerticalOptions="End" HeightRequest="50" WidthRequest="125" Margin="0,0,0,10" Style="{StaticResource PrimaryBtn}"/>
            <Label x:Name="GotAccountLbl" Text="Already got an account?" HorizontalOptions="Center" Style="{StaticResource LinkLbl}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" NumberOfTapsRequired="1"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>